{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "lib"
    },
    "include": ["lib"],
    "exclude": ["node_modules"]
}
